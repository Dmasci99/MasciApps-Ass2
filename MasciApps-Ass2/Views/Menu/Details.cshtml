@model MasciApps_Ass2.Models.Item

@{
    ViewBag.Title = "Details";
    
}

<div class="interior-page menu-page" id="details-page">
    <div class="container">
        <div class="button"><a href="/Menu#item@(Model.ItemId)"><i class="fa fa-arrow-circle-left"></i> Go Back</a></div>
        <div class="right">
            <div class="info">
                <div class="name">@Model.Name</div>
                <div class="price">($@(Model.Price))</div>
                <div class="desc">@Model.LongDescription</div>
            </div>
        </div>
        <div class="left">
            <div class="image">
                @if (Model.ItemLabel.Name != "")
                {
                    <div class="label">@Model.ItemLabel.Name</div>
                }
                <img src="@Model.ImageUrl" alt="@Model.Name" title="@Model.Name" />
            </div>
        </div>

        <div class="clear-float"></div><!--clear-float-->
    </div>
</div>

